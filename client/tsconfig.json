{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "typeRoots" : ["node_modules/@types", "src/types"],
    "types" : ["jest", "@types/jest", "node", "@types/node", "@testing-library/jest-dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "outDir": "./dist/",
    "noImplicitAny": true,
  },
  "include": [ "src", "src/**/*.tsx?", "**/*.test.tsx?", "types", "src/types/images.d.ts", "serviceWorker.js", "jest.config.js", "./setUpTests.js" ],
  "exclude": [ "node_modules", "cypress"]
}